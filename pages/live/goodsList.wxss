.no-data{
  text-align: center;
  color:#999;
  padding-top:50%;
}
.goods-item{
  position: relative;
}
.tick{
  position:absolute;
  top:0;
  width: 100%;
  color:white;
  background-color:rgba(253, 103, 103,0.5);
  text-align: center;
}
.bottom-bar{
  height:80rpx;
}

.fix-iphonex-bottom{
  
  height: 148rpx;
}
.bottom-btn{
  height: 80rpx;
  width:100%;
  text-align: center;
  float:left;
  color:#fff;
  font-size: 24rpx;
  line-height: 80rpx;
  border:none;
  border-radius: 0;
  background-color: #ff2526;
  background-image: -webkit-linear-gradient(left,#ff8193 0,#ff4965 100%);
  background-image: linear-gradient(to right,#ff8193 0,#ff4965 100%);
}