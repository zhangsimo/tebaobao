/* brand.wxss */
.brand-item {
  width: 100%;
  height: auto;
  margin-top: 10px;
}
.brand-big-img {
  width: 100%;
  height: 180px;
}
.brand-info-wrap {
  width: 100%;
  height: auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.brand-logo-wrap {
  width: 120rpx;
  height: 120rpx;
  border: 1px solid #ededed;
}
.brand-logo-img {
  width: 120rpx;
  height: 120rpx;
}
.brand-info {
  margin-top: 10px;
  margin-left: 10px;
}
.brand-name {
  font-size: 14px;
  color: #000;
}
.brand-hot {
  color: #888;
  margin-top: 3px;
}
.brand-btn {
  padding: 3px 10px;
  border:1px solid #ff4965;
  color: #ff4965;
  border-radius: 15px;
  margin-right: 10px;
}
.home-other {
  width:100%;
  height: auto;
  background: #fff;
}
.other-loading {
  position: fixed;
  top: 0;
  left: 0;
  padding-top: 999px;
  width: 100%;
  height: 100%;
  background: #fff;
  z-index: 999;
}
.other-item {
  width: 100%;
  height: auto;
  display: flex;
  align-items: center;
  margin-top: 10px;
}
.other-img {
  width: 100px;
  height: 100px;
  margin-left: 10px;
}
.other-img > image {
  width: 100%;
  height: 100%;
}
.other-info {
  flex: 1;
  margin-right: 10px;
  font-size: 12px;
  margin-left: 10px;
}
.other-name {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
}
.other-price {
  margin-top: 5px;
}
.other-bom {
  width: 100%;
  height: auto;
  display: flex;
  justify-content: space-between;
  margin-top: 8px;
}
.other-btn {
  padding:3px 8px;
  color: #ff4965;
  border:1px solid #ff4965;
  border-radius: 15px;
}
.other-item-mark {
  padding: 1px 2px;
  border: 1px solid #ff4965;
  color: #ff4965;
  border-radius: 5px;
}