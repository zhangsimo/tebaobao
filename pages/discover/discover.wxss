/**index.wxss**/
page{
  height: 100%;
  background-color: #f2f2f2;
}
.container{
  width:100%;
  height:100%;
}
.live-item{
  height:240rpx;
  margin-left: 10px;
  margin-right: 10px;
  margin-top:10px;
  background:#fff;
  border-radius: 2px;
  position: relative;
}
.live-cover{
  width: 240rpx;
  height:240rpx;
  border-radius:2px 0px 0px 2px;
  float:left;
  margin-right: 20rpx;
}
.live-info{
  padding:20rpx;
}
.live-title {
  font-size: 13px;
  padding-left: 20rpx;

}
.live-owner{
  font-size: 12px;
  color:#ccc;
  padding-left:20rpx;
  padding-top:10rpx;
}
.live-goods{
  padding-top:20rpx;
  overflow: hidden;
  height: 70rpx;
}
.live-goods-cover{
  float:left;
  width:70rpx;
  height:70rpx;
  border-radius: 2px;
  margin-right: 10rpx;
} 

.live-icon{
  position: absolute;
  top:0;
  left:0;
  background-color:rgba(51, 51, 51, 0.7);
  color:#fff;
  font-size: 22rpx;
  border-radius: 4rpx;
  height:30rpx;
  line-height: 30rpx;
  padding-left:24rpx;
  padding-right:4rpx;
}

.live-record{
  padding-left:4rpx;
}
.live-red-dot{
  position: absolute;
  top:5rpx;
  left:5rpx;
  width:20rpx;
  height:20rpx;
}
.goods-num{
  background-color: rgba(255, 226, 226, 0.3);
  color:#f27373;
  text-align: center;
  line-height: 70rpx;
  font-size: 18rpx;
  display: flex;
  flex-direction:column;
  align-items: center;
}
.goods-num .text{
  display: inline;
}
.goods-cover{
  float:left;
  width:70rpx;
  height:70rpx;
  border-radius: 2px;
  margin-right: 10rpx;
}
.goods-wrap .goods-cover{
  width:100%;
  height: 352.66rpx;
  /* height:450rpx; */
  border-radius: 2px 2px 0 0;
}
