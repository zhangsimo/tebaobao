page,
.container,
.live-wrap{
  width: 100%;
  height: 100%;
  background-color: #f1f1f1;
  overflow: hidden;
}
.live{
  width:100%;
  height: 100%;
  border:none;
  /* position: relative; */
}
live-player {
  position: static !important;
}
.live-user-info {
  position: fixed;
  top: 14px;
  left: 0;
  width: 50%;
  height: 78rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.live-user-img {
  width: 62rpx;
  height: 62rpx;
  flex-shrink: 0;
  border: 1px solid #fff;
