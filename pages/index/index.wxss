/* index.wxss */
page{
  height: 100%;
}
.index {
  width:100%;
  height:100%;
}
.header-search {
  width: 100%;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #fff;
  z-index: 99;
  border-bottom: 1px solid #f3f3f3;
}
.header-search image {
  width:20px;
  height:20px;
}
.header-search view:nth-child(2) {
  flex: 1;
}
.header-search .home-search {
  display: flex;
  width:100%;
  padding-left: 10px;
  align-items: center;
  background: #f3f3f3;
   border-radius: 5px;
}
.header-search view:nth-child(2) > input {
  margin-left: 6px;
}
.header-search view:nth-child(1),
.header-search view:nth-child(3) {
  width: 50px;
  text-align: center;
}
.home-category-tabs,
.home-time-tabs {
  width: 100%;
  white-space: nowrap;
  border-bottom: 1px solid #d8d8d8;
}
.home-category-tabs {
  height: 40px;
  background: #fff;
  z-index: 99;
}
.home-category-tabs view {
  line-height: 40px;
  display: inline-block;
  margin: 0 8px;
}
.home-time-tabs {
  height: 50px;
}
.home-time-tabs view {
  display: inline-block;
  margin: 0 8px;
  line-height: 50px;
  font-size: 14px;
}
.categoryActive {
  height: 38px;
  color: #ff4965;
  border-bottom: 2px solid #ff4965;
}
.timeActive {
  color: #ff4965;
  height: 48px;
  border-bottom: 2px solid #ff4965;
}
.home-index,
.home-brand,
.home-other {
  flex: 1;
  background: #fff;
  position: relative;
  padding-bottom: 20px;
}
.topnav {
  position: fixed;
  top: 95px;
  z-index:99;
  background: #fff;
 
}
.home-banner {
  margin-top: 16px;
  width: 100%;
  padding-bottom: 20px;
}
.home-swiper {
  width: 100%;
  height: 360rpx;
}
.home-time-tabs {
  height: 50px;
  margin-top: 6px;
  padding-top: 4px;
}
.home-time-tabs view {
  line-height: 24px;
  text-align: center;
  margin: 0 15px;
}
.parent-time{
  display: block;
  font-size: 18px;
}
.parent-status {
  font-size: 12px;
}
.home-goods {
  padding: 0 10px;
  margin-top: 15px;
}
.home-goods-img {
  width:100%;
}
.home-goods-item {
  display: inline-block;
  width: 30px;
  height: 16px;
  margin-right: 10px;
  text-align: center;
  line-height: 15px;
  font-size: 11px;
  color:#ff4965;
  border-radius: 3px;
  border:1px solid #ff4965;
}
.home-goods-name {
  font-size: 14px;
  overflow:hidden; 
  vertical-align: middle;
  text-overflow:ellipsis; 
  display: -webkit-box; 
  -webkit-line-clamp:2;
  -webkit-box-orient: vertical;
}
.home-goods-price {
  font-size: 16px;
  color: #ff4965;
  margin-top: 5px;
}
.home-goods-sales {
  font-size: 12px;
  color: #878787;
}
.home-goods-bom {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.home-goods-btn {
  width: 75px;
  height: 20px;
  border:1px solid #d8d8d8;
  color: #505050;
  border-radius: 20px;
  text-align: center;
  line-height:20px;
}
.brand-item {
  width: 100%;
  height: auto;
  margin-top: 10px;
}
.brand-big-img {
  width: 100%;
  height: 180px;
}
.brand-info-wrap {
  width: 100%;
  height: auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.brand-logo-wrap {
  width: 120rpx;
  height: 120rpx;
  border: 1px solid #ededed;
}
.brand-logo-img {
  width: 120rpx;
  height: 120rpx;
}
.brand-info {
  margin-top: 10px;
  margin-left: 10px;
}
.brand-name {
  font-size: 14px;
  color: #000;
}
.brand-hot {
  color: #888;
  margin-top: 3px;
}
.brand-btn {
  padding: 3px 10px;
  border:1px solid #ff4965;
  color: #ff4965;
  border-radius: 15px;
  margin-right: 10px;
}
.home-other,
.home-brand {
  width:100%;
  height: 100vh;
  background: #fff;
}
.other-loading {
  position: fixed;
  top: 0;
  left: 0;
  padding-top: 999px;
  width: 100%;
  height: 100%;
  background: #fff;
  z-index: 999;
}
.other-item {
  width: 100%;
  height: auto;
  display: flex;
  align-items: center;
  margin-top: 10px;
}
.other-img {
  width: 100px;
  height: 100px;
  margin-left: 10px;
}
.other-img > image {
  width: 100%;
  height: 100%;
}
.other-info {
  flex: 1;
  margin-right: 10px;
  font-size: 12px;
  margin-left: 10px;
}
.other-name {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
}
.other-price {
  margin-top: 5px;
}
.other-bom {
  width: 100%;
  height: auto;
  display: flex;
  justify-content: space-between;
  margin-top: 8px;
}
.other-btn {
  padding:3px 8px;
  color: #ff4965;
  border:1px solid #ff4965;
  border-radius: 15px;
}
.other-item-mark {
  padding: 0px 2px;
  border: 1px solid #ff4965;
  color: #ff4965;
  border-radius: 5px;
  margin: 0 3px;
}
.scoll-h {
  height: 100%;
}