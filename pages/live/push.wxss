#pusher,#camera {
  width: 100%;
  height: 100%;
}

.publish-page {
  width: 100vw;
  height: 100vh;
  position: relative;
}

.publish-control {
  width: 100%;
  height: 400rpx;
  background: linear-gradient(-180deg, rgba(0,0,0,0.00) 0%, rgba(0,0,0,0.24) 100%);
  transform: translateY( 400rpx);
  opacity: 0;
  transition: all ease 0.4s;
  position: absolute;
  bottom: 0;
  left: 0;
}

.publish-page.active .publish-control {
  opacity: 1;
  transform: translateY(0);
}

.switchbtn {
  width: 80rpx;
  height: 80rpx;
  left: 80rpx;
  top: 250rpx;
  position: absolute;
}

.exitbtn {
  width: 80rpx;
  height: 80rpx;
  right: 80rpx;
  top: 250rpx;
  position: absolute;
}

.magicbtn {
  width: 80rpx;
  height: 80rpx;
  right: 335rpx;
  top: 250rpx;
  position: absolute;
}

.control__mode {
  position: absolute;
  right: 305rpx;
  top: 170rpx;
  width: 120rpx;
  color: #fff;
  font-size: 20rpx;
  border: 1px solid #D4D4D4;
  border-radius: 20rpx;
  text-align: center;
  padding: 10rpx;
}

.wrapper {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

/*直播状态**/
.live-status{
  color:#fff;
  padding:30rpx;
  font-size: 28rpx;
  text-shadow: 2px 2px 2px #fff;
  position: absolute;
  top:20rpx;
  left:20rpx;
}

.start-btn{
  position: absolute;
  right: 225rpx;
  top: 0rpx;
  width: 300rpx;
  color: #fff;
  font-size: 32rpx;
  border: 1px solid #D4D4D4;
  border-radius: 20rpx;
  text-align: center;
  height:82rpx;
  line-height: 82rpx;
  background-color:rgba(244, 67, 50, 0.5);
}

.count-down{
  font-size: 200rpx;
  font-weight: bold;
  color:#fff;
}

/*横拍 的 start-btn*/
.h-start-btn-wrap{
  width:80rpx;
  height:100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: absolute;
  left:100rpx;
  z-index: 9999;
}
.h-start-btn{
  width:80rpx;
  height:300rpx;
}

.h-push-note{
  position: absolute;
  top:10rpx;
  right:10rpx;
  width:80rpx;
  height:300rpx;
}
/* end 直播状态*/

/*消息*/
.msg-wrap{
  color:#fff;
  position: absolute;
  left:30rpx;
  bottom: 200rpx;
  height:430rpx;
  font-size: 26rpx;
  overflow-y: scroll;
}

.message-item{
  margin-bottom: 15rpx;
  font-size: 16px;
  text-shadow: 2px 2px 2px #000;
}
.message-username , .message-content{
  display: inline;
}
.message-username{
  color: #e62727;
}

.message-content{
   word-break: break-all;
}
/*end 消息*/
