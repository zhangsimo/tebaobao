/* pages/order/submit.wxss */
page{
  background-color:#f8f8f8;
  color:#333;
  padding-bottom: 200rpx;
}
.consignee .icon{
  width:32rpx;
  height: 32rpx;
  padding-top:7rpx;
}

.consignee{
  display: flex;
  flex-direction: row;
}

.consignee .info{
  padding-left:20rpx;
  flex:1;
  display: flex;
  flex-direction: column;
}

.consignee .name{
  float:left;
  font-size: 28rpx;
}

.consignee .phone{
  float:right;
  font-size: 28rpx;
}

.address{
  color:#666;
}

.address-cell{
  padding-bottom: 20rpx;
}

.address-border{
  display: block;
  height: 2px;
  width:100%;
  background-image: url("http://static.zhibojie.tv/images/miniapp/address-border2@2x.png");
  background-size: 34px 2px;
  background-repeat: repeat;
}

/* 结算信息 */
.order-pay-info{
  padding:20rpx;
  font-size: 26rpx;
  background-color:#ffffff;
}

.order-pay-info .price{
  float:right;
  color:#666;
}
.order-pay-info .shipping-fee{
  padding-top:20rpx;
}
/* end 结算信息 */

/* bottom-bar */
.bottom-bar .submit{
  height:96rpx;
  width:220rpx;
  background-color: #ff4965;
  color:#ffffff;
  font-size: 32rpx;
  text-align: center;
  line-height: 96rpx;
  border-radius: 0;
  float:right;
}
.bottom-bar .submit::after{
  border-radius: 0;
}

.total-price{
  height:100%;
  float:right;
  padding-right: 20rpx;
  color:#999;
}
.check-bottom-bar .total-price-num{
  padding-top:24rpx;
  font-size: 28rpx;
}

.price-active{
  color:#f60;
}
/* end bottom-bar */
