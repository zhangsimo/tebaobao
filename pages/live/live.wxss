  height: 51px;
}
.hide{
  display: none;
}

.shop-cart {
  position: relative;
  overflow: visible;
}
.shop-count {
  position: absolute;
  top: 0px;
  right: 0px;
  width: 13px;
  height: 13px;
  font-size: 10px;
  border-radius: 50%;
  background-color:rgba(246,27,27,1);
  text-align: center;
  line-height: 13px;
  color: #fff;
}

.content-wrap{
  height:75%;
  box-shadow: 0px 5px 5px rgba(155, 157, 202, 0.4);
}
.message-wrap{
  position: absolute;
  bottom: 70px;
  left: 0;
  height:25%;
  z-index: 90;
  overflow-y: scroll;
}
.message-wrap::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

message-wrap-0{
  height:100%;
}

.products-wrap{
  width:20%;
  height:100%;
  background-color:#9b9dca;
}
.product-item{
  position: relative;
}
.live-user-msg-img {
  width: 22px;
  height: 22px;
  border-radius: 50%;
}
.product-item .arrow{
  position: absolute;
  right: 0;
  bottom: 20rpx;
  width:0px;
  height:0px;
  border-top: 6px solid transparent;
  border-right: 6px solid #fff;
  border-bottom: 6px solid transparent;
}
.product {
  width:80%;
  height:16vw;
  margin-left:10%;
  margin-top:2vw;
  position: relative;
}
.product image{
  width:100%;
  height:100%;
  border-radius: 3px;
}
.price-text{
  position:absolute;
  left:0;
  bottom:0;
  color:#fff;
  font-size: 10px;
  background-color: rgba(51, 51, 51, 0.3);
  padding:1px 3px;
  border-radius: 2px;
}
.message-item{
  display: flex;
  align-items: center;
  padding:10px 20px 0 20px;
}
.message-item .user-name{
  padding-right: 5px;
  font-size: 12px;
  display: flex;
}
.message-content{
  font-size: 14px;
  color:#fff;
  word-break: break-all;
}

.message-bar{
  position:fixed;
  bottom: 0;
  width:100%;
  height:34px;
  background-color:#fff;
  z-index: 100;
  
}
.message-bar input{
  color:#fff;
  height:34px;
  border-radius: 2px;
  /* margin-top:4px; */
  padding-left:10px;
  width:75%;
  float:left;
  font-size: 12px;
}

.message-bar .send-message-btn{
  width:22%;
  position:absolute;
  right:0;
  font-size: 13px;
  height: 100%;
  line-height: 34px;
  color:#fff;
  background-color: #ff2526;
  background-color: -webkit-linear-gradient(135deg,rgba(254,32,96,1) 0%,rgba(254,25,77,1) 100%);
  border-radius: 0;
  text-align: center;
  z-index: 99;
}


/* sku-layout */
.sku-layout .close{
  width:60rpx;
  height:60rpx;
