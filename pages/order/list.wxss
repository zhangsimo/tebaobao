page{
  background: #f9f9f9;
}

.empty-order {
    line-height: 40px;
    text-align: center;
    padding: 115px 0;
    font-size: 14px;
    color: #999;
}

.empty-order .icon {
    width: 244rpx;
    height: 224rpx;
    display: block;
    background: url("http://static.zhibojie.tv/images/miniapp/empty_order.png");
    background-size: 100% 100%;
    margin: 0 auto 10px;
}

/*order item*/
.shop-icon{
  width:32rpx;
  height:32rpx;
}
.shop-name{
  padding: 0 10rpx;
}
.shopcart-item{
  background-color:#ffffff;
}
.shopcart-item .weui-cell{
  padding:20rpx 30rpx 20rpx 20rpx;
}
.shopcart-goods-item{
  min-height: 160rpx;
  background-color: #fafafa;
}

.shopcart-goods-cover{
  width:160rpx;
  height:160rpx;
  flex:0 0 160rpx;
}
.shopcart-goods-info{
  margin-left: 20rpx;
  width:0;
  flex: 1;
}
.shopcart-goods-name{
  height: 80rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.shopcart-sku-str{
  max-height: 40rpx;
  line-height: 32rpx;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 4rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.shopcart-goods-price{
  font-size: 28rpx;
  color: #666;
  height: 40rpx;
  line-height: 40rpx;
  display: inline-block;
}
.shopcart-goods-item{
  position: relative;
  margin-bottom: 20rpx;
}
.shopcart-goods-item .count{
  position: absolute;
  bottom: 20rpx;
  right:20rpx;
  font-size: 24rpx;
  color:#666;
}
.shopcart-item-header{
  background-color:#ffffff;
}

.order-item{
  background-color:#ffffff;
  margin-top:  20rpx;
  border-top:1px solid #fff;
}

.order-amount{
  height: 68rpx;
  line-height: 48rpx;
  background-color: #fff;
}

.order-amount-info{
  float:right;
  margin-right: 20rpx;
  font-size: 28rpx;
}
.order-amount-info text{
  color: #ff4965;
}

.order-pay{
  padding:20rpx;
  height: 88rpx;
  box-sizing:border-box;
  border-top:1px solid #f2f2f2;
}
.order-pay .pay-btn{
  float:right;
  height:48rpx;
  font-size: 24rpx;
  line-height: 48rpx;
  color:#ff4965;
  border-color:#ff4965;
  background-color:#ffffff;
}

.order-pay .cancel-btn{
  float:right;
  height:48rpx;
  font-size: 24rpx;
  line-height: 48rpx;
  background-color:#ffffff;
  margin-right: 30rpx;
}

.order-pay .confirm-receive{
  margin-right: 0;
}

.pay-btn::after{
  border-color:#ad0e11;
}
.status-text{
  float:right;
}

.order-status{
  color:#ff4965;
}
/* end order item*/

/* start search */
.search_box {
    position: relative;
    top: 0.4rem;
    width: 100%;
    background: #fff;
    border-radius: 0px;
    text-align: center;
    border-bottom: 1px solid #f3f3f3;
    border-top: 1px solid #eee;
}

.search_box input {
  width: 85%;
  height: 2rem;
  line-height: normal;
  border: none;
  font-size: 0.8rem;
}

.search_box button {
  position: absolute;
  top: 0.4rem;
  right: 0.6rem;
  width: 1.2rem;
  height: 1.2rem;
  border: none;
}

.ico_07 {
    background: url(https://tebaobao.com/mobile/themes/tbb/images/ico_07.png) no-repeat 50% 50%;
    -webkit-background-size: 1.2rem 1.2rem;
    -moz-background-size: 1.2rem 1.2rem;
    background-size: 1.2rem 1.2rem;
    width: 1.2rem;
    height: 1.2rem;
}

.order_nav {
  width: 100%;
  overflow: hidden;
  border-top: 1px solid #eee;
}

.order_nav view.cur {
  color: #ff516c;
  border-bottom: 2px solid #ff516c;
  box-sizing: border-box;
}

.order_nav view {
  width: 20%;
  float: left;
  text-align: center;
  height: 45px;
  line-height: 45px;
}

.height {
  height: 10px;
  background: #f3f3f3;
}
/* end search */

