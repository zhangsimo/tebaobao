<form bindsubmit='login'>
<view class="weui-cells weui-cells_after-title login-form">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">手机号</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" name="mobile" placeholder="请输入手机号" bindinput='mobileInput'/>
                </view>
            </view>
            <view class="weui-cell weui-cell_input weui-cell_vcode">
                <view class="weui-cell__hd">
                    <view class="weui-label">密码</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" type="password" name="password" placeholder="请输入密码" bindinput="passwordInput" />
                </view>
                
            </view>
            
</view>

<button class="login-btn" form-type='submit'>登录</button>
</form>