/* pages/category/category.wxss */
page{
  height: 100%;
  width: 100%;
}
.wrap{
  height: 100%;
  width: 100%;
  position: relative;
}
.search-bar{
  height: 88rpx;
  width: 100%;
  border-top:1px solid #fff;
  border-bottom: 1px solid #f2f2f2;
}
.search-input{
  background: #F4F5F7;
  height:60rpx;
  width: 90%;
  margin: 0 auto;
  margin-top:14rpx;
  margin-bottom: 14rpx;
  border-radius: 30rpx;
}
.hover-search-bar{
  background-color: rgba(255, 255, 255, 0.1);
  opacity: 0.7;
}

.hover-search-bar .search-input{
  width:88%;
  text-align: center;
}
.hover-search-bar .search-content .txt{
  display: none;
}
.search-content{
  margin: 0 auto;
  position: relative;
  width:140rpx;
  height: 100%;
}

.search-content image{
  width:32rpx;
  height:32rpx;
  margin-top:12rpx;
}
.search-content .txt{
  position: absolute;
  color:#9d9d9d;
  padding-left:6rpx;
  display: inline;
  top:10rpx;
  font-size: 24rpx;
}

.content-wrap{
  width: 100%;
  position: absolute;
  top:102rpx;
  left:0;
  bottom:0;
}
.category-top-wrap{
  width:28%;
  height: 100%;
  border-right:1px solid #f2f2f2;
  float:left;
  position: relative;
}

.category-top{
  height: 100%;
  width: 100%;
  font-size:26rpx;
}
.move-area{
  height: 100%;width: 10px;background: #fff;position:absolute;top:0;left:0;
}
.move-view{
  height: 15px; width: 5px; background: #b32222;
  position: absolute;
  top:28rpx;
}

.category-sub{
  width:71%;
  height: 100%;
  padding:0;
  float:left;
}

.hide-scroll-bar{
  top:0;
  right: 0;
  width:30rpx;
  height: 100%;
  position: absolute;
  background: #fff;
}

.category-top-item{
  text-align: center;
  height:88rpx;
  color:#7d7d7d;
  line-height: 88rpx;
  position:relative;
}
.category-top-item-active{
  color:#ff4965;
}

.category-top-item-active .active-left-view{
  width:6rpx;
  height:40rpx;
  position: absolute;
  left:0;
  top:24rpx;
  background: #ff4965;
}

.category-sub-item{
  color:#171717;
  width:33%;
  float:left;
  text-align: center;
  margin-bottom: 40rpx;
}

.category-sub-item image{
  width:110rpx;
  height:110rpx;
  margin:0 auto;
  border-radius: 60rpx;
}