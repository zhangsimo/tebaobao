page{
  background-color:#f8f8f8;
}
.order-status-wrap{
  background: #fff;
  padding: 20rpx 0;
}
.order-status{
  position: relative;
  padding: 0rpx 20rpx 0rpx 20rpx;
  height: 80rpx;
}
.status-text{
  position: absolute;
  padding-left: 100rpx;
  top: 50%;
  -webkit-transform: translate3d(0, -50%, 0);
  -moz-transform: translate3d(0, -50%, 0);
  transform: translate3d(0, -50%, 0);
  font-size:28rpx;
}

/*地址栏*/
.consignee .icon{
  width:32rpx;
  height: 32rpx;
  padding-top:7rpx;
}

.consignee{
  display: flex;
  flex-direction: row;
}

.consignee .info{
  padding-left:20rpx;
  flex:1;
  display: flex;
  flex-direction: column;
}

.consignee .name{
  float:left;
  font-size: 28rpx;
}

.consignee .phone{
  float:right;
  font-size: 28rpx;
}

.address{
  color:#666;
}

.address-cell{
  padding-bottom: 20rpx;
  background-color:#fff;
}

.address-border{
  display: block;
  height: 2px;
  width:100%;
  background-image: url("http://static.zhibojie.tv/images/miniapp/address-border2@2x.png");
  background-size: 34px 2px;
  background-repeat: repeat;
}
.order-status::before{
  content: '';
  position: absolute;
  top: 0;
  bottom: 0;
  margin: auto;
  width: 80rpx;
  height: 80rpx;
  background-size: 80rpx 80rpx;
}
.order-status-waitpay::before{
  background-image: url("http://static.zhibojie.tv/images/miniapp/icon_topay2@2x.png");
}
.order-status-waitsend::before{
  background-image: url("data:image/png;base64,");
}

.order-status-waitconfirm::before{
  background-image:url("data:image/png;base64,");
}

.order-status-close::before{
  background-image: url("http://static.zhibojie.tv/images/miniapp/icon_close2@2x.png");
}
.order-status-finish::before{
  background-image: url("http://static.zhibojie.tv/images/miniapp/icon_totuan2@2x.png");
}
/* end 地址栏*/

.other-info-wrap{
  background-color:#fff;
}

.postscript text{
  color:#666;
}

.order-pay-info{
  padding:20rpx 30rpx;
  background: #fff;
  font-size:26rpx;
  color:#333;
}
.order-amount-text{
  color:#f44;
  float:right;
  font-size: 32rpx;
}

/*底部bar*/
.bottom-bar .submit{
  height:96rpx;
  width:220rpx;
  background-color: #ff4965;
  color:#ffffff;
  font-size: 32rpx;
  text-align: center;
  line-height: 96rpx;
  border-radius: 0;
  float:right;
}
.bottom-bar .submit::after{
  border-radius: 0;
}
/* end 底部bar*/